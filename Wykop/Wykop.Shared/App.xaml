<Application
    x:Class="Wykop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wykop"
    xmlns:viewModel="using:Wykop.ViewModel"
    RequestedTheme="Dark">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary Source="View/Resources/DarkThemeResources.xaml" x:Key="Default"/>
                <ResourceDictionary Source="View/Resources/DarkThemeResources.xaml" x:Key="Dark"/>
                <ResourceDictionary Source="View/Resources/LightThemeResources.xaml" x:Key="Light"/>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Resources/ApplicationResources.xaml"/>
                <ResourceDictionary Source="View/Resources/SharedResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <viewModel:ViewModelLocator x:Key="ViewModelLocator"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
